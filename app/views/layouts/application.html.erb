<!DOCTYPE html>
<html>
<head>
  <title>TestNew</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    <div id="flash">
    <% if flash[:notice] %>
      <div class="bg-primary"><%= flash[:notice] %></div>
    <% end %>
    </div>
    <div id="user_nav" class='fr'>
      
      <% if !current_user %>
      <%= link_to("注册", new_account_path ) %> | 
      <%= link_to("登陆", new_user_session_path ) %> 
      <% else %>
      <%= link_to "我的账户", account_path  %>:<%= current_user.login %> |
      <%= link_to "注销", user_session_path, method: :delete %>
      <% end %>
    </div>
    <%= yield %>
  </div>


</body>
</html>
